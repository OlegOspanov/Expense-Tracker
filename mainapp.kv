#:kivy 2.3.1

<MainWindow>:
    orientation:'vertical'
    MDBottomNavigation:

        MDBottomNavigationItem:
            id:HomePage
            name: 'Screen 1'
            text: 'Домой'
            icon: 'home-outline'

            MDBoxLayout:
                orientation:'vertical'
                padding:(15,0,15,30)

                MDBoxLayout:
                    orientation:'vertical'
                    padding:(0,0,0,20)

                    MDTextField:
                        id:product
                        helper_text: "Продукт"




                    MDTextField:
                        id:price
                        helper_text: "Стоимость"


                    MDTextButton:
                        text:"Другая категория"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: root.current='Screen 2'




                MDGridLayout:
                    id: container
                    rows:3
                    spacing:35



                    MDIconButton:
                        id: food_category
                        icon: "basket-outline"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Еда",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)




                    MDIconButton:
                        id:bus_category
                        icon: "bus-side"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Транспорт",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)

                    MDIconButton:
                        id:home_category
                        icon: "home-outline"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Дом",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)


                    MDIconButton:
                        id:tshirt_category
                        icon: "tshirt-crew-outline"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        on_press:
                            app.insert_category(root.ids.product.text,"Одежда",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)



                    MDIconButton:
                        id:phone_category
                        icon: "phone"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Связь",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)


                    MDIconButton:
                        id:medical_category
                        icon: "hospital-box-outline"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Здоровье",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)


                    MDIconButton:
                        id:clean_category
                        icon: "toothbrush-paste"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Гигиена",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)


                    MDIconButton:
                        id:basket_category
                        icon: "food"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Общепит",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)


                    MDIconButton:
                        id:basket_category
                        icon: "liquor"
                        theme_icon_color: "Custom"
                        icon_color: (.60,.60,.60,1)
                        style: "standard"
                        on_press:
                            app.insert_category(root.ids.product.text,"Развлечения",root.ids.price.text)
                        on_release:
                            app.clear_text_forms(product,price)


        MDBottomNavigationItem:
            id:create_list_btn_category
            name: 'Screen 2'
            text: 'Категории'
            icon: "star-outline"
            on_enter:app.create_list_category()
            on_leave:app.clean_list_category()

            MDScrollView:
                do_scroll_x: False

                MDBoxLayout:
                    id: main_scroll
                    orientation: "vertical"
                    adaptive_height: True

        MDBottomNavigationItem:
            id:often_products
            on_enter:app.often_products()
            on_leave:app.clean_list_often_products()
            name: 'Screen 3'
            text: 'Частые'
            icon: "heart-outline"



            MDScrollView:
                do_scroll_x: False



                MDBoxLayout:
                    id: often_product_scroll
                    orientation: "vertical"
                    adaptive_height: True





